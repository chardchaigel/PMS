@{
    ViewData["Title"] = "Upload Company Goals";
}

@section HeaderScripts
{
    <script src="https://unpkg.com/read-excel-file@4.x/bundle/read-excel-file.min.js"></script>
    <!-- Add icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

@section Scripts
{
    <script type="text/javascript" src=@Url.Content("/js/excelReader.js")></script>
    <script type="text/javascript" src=@Url.Content("/js/pages/compGoals.js")></script>
}

<div class="col-md-10">
    <div class="row">
        <div class="col-md-6">
            <div class="content-box-large">
                <div class="panel-heading">
                    <div class="panel-title"><b>@ViewData["Title"]</b></div>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form">

                        <div class="form-group">
                            <label for="dept" class="col-sm-2 control-label">ฝ่าย</label>
                            <div class="col-sm-10">
                                <select id="dept">
                                    <option value="01">สำนักกรรมการ</option>
                                    <option value="02">ฝ่ายบริหารงานทั่วไป</option>
                                    <option value="03">Digital</option>
                                    <option value="04">พัฒนาและควบคุมธุรกิจ</option>
                                    <option value="05">จัดซื้อจัดจ้าง</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="" class="col-md-2 control-label">File</label>
                            <div class="col-sm-10">
                                <div id="wrapper">
                                <input type="file" class="btn btn-default" name="uploadFile" id="uploadFile" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel">
                                </div>
                                <p class="help-block">
                                    เลือก File ที่ต้องการ Upload
                                </p>
                            </div>
                        </div>
                        
                        <div class="form-actions">
                            <div class="col-sm-10">
                                <button id="btn-upload" class="btn btn-seconday btn-sm buttonload" disabled type="submit">
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>                                    
                                    <i id="btn-spinner" class="fa fa-save"></i>
                                    <span id="btn-upload-text">Upload</span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </div>


    <div class="content-box-large">
        <div class="panel-heading">
            <div class="panel-title">Company Goals</div>
        </div>
        <div class="panel-body">
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="compGoals">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>BSC</th>
                        <th>Corporate Code</th>
                        <th>Goal</th>
                        <th>Weight</th>
                        <th>Grade 1</th>
                        <th>Grade 2</th>
                        <th>Grade 3</th>
                        <th>Grade 4</th>
                        <th>Grade 5</th>
                    </tr>
                </thead>
                <tbody id="goalsData"></tbody>
            </table>
        </div>
    </div>

   
</div>

